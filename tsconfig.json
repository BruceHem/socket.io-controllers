{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true
    },
    "include": [ "./src/**/*.ts" ],
    "exclude": [ "build", "dist", "node_modules" ]
  }
  